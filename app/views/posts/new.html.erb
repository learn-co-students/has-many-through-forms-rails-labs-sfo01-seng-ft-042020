<%= render 'form', post: Post.new %>
<h1>New Post Form</h1>
<%= form_for(@post) do |f| %><br>
<%= f.label :title %><br>
<%= f.text_field :title %><br>

<%= f.label :content %><br>
<%= f.text_area :content %><br>

<%= f.label :category %><br>
<%= f.collection_check_boxes :category_ids, Category.all, :id, :name %><br>
<%= f.fields_for :categories, @category do |categories_fields| %>
  <%= categories_fields.label :name %>
  <%= categories_fields.text_field :name %>
<% end %>
<br><br>
<%= f.submit %>
<% end %>
