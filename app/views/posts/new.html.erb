<!-- <%= render 'form', post: Post.new %> --> 

<%= form_for @post do |f| %>
<%= f.label :Title %>
<%= f.text_field :title %><br />
<%= f.label :Content %>
<%= f.text_field :content %><br />
<%= f.collection_check_boxes :category_ids, Category.all, :id, :name %><br /><br />
<%= f.fields_for :categories, @post.categories.build do |ff| %>
    <%= ff.label :name %>
    <%= ff.text_field :name %>

<% end %>
<br />
<%= f.submit %>
<% end %>